<div class="mb-8 md:p-4">
	<div class="container md:px-0">
		<div class="flex items-center justify-between mb-4 pl-4 md:pl-0">
			<h2 class="uppercase font-medium text-lg mb-0 leading-none">Today's classes</h2>
		</div>
		<div class="snap-x snap-mandatory flex overflow-x-scroll pl-4 md:pl-0 md:-mr-4">
			<% workouts.each do |workout| %>
				<div class="snap-end pr-4 shrink-0 w-3/5 sm:w-1/3 md:w-1/4 lg:w-1/5">
					<%= render 'workouts/workout', workout: workout %>
				</div>
			<% end %>
		</div>
		<div class="px-4 md:px-0">
			<%= render 'components/if_empty', records: workouts, message: "There are no workouts for today" %>
		</div>
	</div>
</div>