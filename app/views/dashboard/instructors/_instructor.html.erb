<%= link_to edit_dashboard_instructor_path(instructor), class: 'bg-white w-full flex items-center group' do %>
	<div class="w-40 md:w-36">
		<div class="aspect-w-1 aspect-h-1 w-full relative leading-none overflow-hidden block bg-black bg-opacity-10">
			<%= cl_image_tag(instructor.photo.key, height: 500, width: 500, crop: :fill, class:"h-full w-full object-cover object-center transform-gpu scale-100 group-hover:scale-105 transition-transform duration-300 ease-out") if instructor.photo.attached? %>
		</div>
	</div>

	<div class="w-full h-full p-4 flex flex-col justify-center">
		<h3 class="capitalize font-serif text-xl inline leading-none"><%= instructor.name %></h3>
		<div class="flex items-center">
			<% workout_count = instructor.workouts.count %>
			<p class="opacity-50 text-sm leading-none mt-1"><%= pluralize(workout_count, 'workout') %></p>
		</div>
	</div>
<% end %>