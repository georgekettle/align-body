<%= simple_form_for [:dashboard, category], html: { class:"grid md:grid-cols-2 gap-4" } do |f| %>
	<%= f.input :name %>
	<%= f.input :description %>
	<%= f.input :photo, as: :file, hint: "3:2 ratio dimensions", input_html: { class: "bg-white p-2 border border-gray-500 text-center cursor-pointer inline-block uppercase flex items-center justify-center font-medium text-sm" } %>
	<%= f.submit class: 'bg-black text-white px-6 py-4 text-center cursor-pointer inline-block uppercase w-full flex items-center justify-center font-medium md:col-span-2' %>
<% end %>