<%= render 'components/header' do %>
	<%= render 'components/back/text_link', text: 'All categories', path: dashboard_categories_path, klass:'mb-2' %>
	<h1 class="font-serif text-4xl">Edit category</h1>
<% end %>
<div class="p-4 pt-0">
	<div class="container">
		<div class="w-36">
			<div class="aspect-h-1 aspect-w-2 relative bg-black bg-opacity-10 mb-4">
				<% if @category.photo.attached? %>
					<%= cl_image_tag(@category.photo.key, height: 200, width: 400, crop: :fill, class:'object-cover') if @category.photo.attached? %>
				<% else %>
					<div class="bg-shale flex items-center justify-center text-cream h-full w-full">
						<h4 class="font-serif">No image</h4>
					</div>
				<% end %>
			</div>
		</div>
		<%= render 'form', category: @category %>
		<%= button_to "or Delete category", dashboard_category_path(@category), method: :delete, form: { data: { turbo_confirm: "Are you sure? (You can't reverse this) ** THIS WILL DELETE ALL WORKOUTS IN THIS CATEGORY **" } }, class: "text-terracotta underline underline-offset-4 text-center inline-block mx-auto mt-6" %>
	</div>
</div>