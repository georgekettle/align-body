<%= render 'components/header' do %>
	<%= link_to dashboard_users_path, class:"mb-2 inline-flex items-center opacity-50 hover:opacity-100 transition-opacity duration-300 ease-out" do %>
		<%= render "icons/chevron_left_small", klass: "text-black h-2.5 w-2.5 mr-1" %>
		All users
	<% end %>
	<h1 class="font-serif text-4xl">Edit user</h1>
<% end %>
<div class="p-4 pt-0">
	<div class="container">
		<%= render 'form', user: @user %>
		<%= button_to("or Delete user", dashboard_user_path(@user), method: :delete, form: { data: { turbo_confirm: "Are you sure? (You can't reverse this)" } }, class: "text-terracotta underline underline-offset-4 text-center inline-block mx-auto mt-6") unless current_user == @user %>
	</div>
</div>