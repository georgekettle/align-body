<%= link_to category_path(category), class: 'bg-white aspect-w-3 aspect-h-2 w-full relative leading-none group overflow-hidden block' do %>
	<%= cl_image_tag(category.photo.key, height: 800, width: 800, crop: :fill, class:'absolute inset-0 transform-gpu scale-100 group-hover:scale-105 transition-transform duration-300 ease-out object-cover') if category.photo.attached? %>
	<div class="w-full h-full p-4">
		<h4 class="font-medium uppercase inline-block text-xl md:text-3xl leading-none"><%= simple_format(category.name.gsub(' ','<br/>')) %></h4>
		<p class="opacity-80 text-sm mt-0.5"><%= pluralize(category.workouts.count, 'wrkt') %></p>
	</div>
<% end %>