<% if false %>
	<div class="container md:px-0">
		<div class="flex items-center justify-between mb-4 pl-4 md:pl-0">
			<h2 class="uppercase font-medium text-lg mb-0 leading-none"><%= category.name %></h2>
			<%= link_to category_path(category), class:"px-4 py-2 border border-black uppercase font-medium text-sm mr-4 md:mr-0 bg-black text-white" do %>
				See all
			<% end %>
		</div>
		<div class="snap-x snap-mandatory flex overflow-x-scroll pl-4 md:pl-0 md:-mr-4">
			<% category.workouts.first(8).each do |workout| %>
				<div class="snap-end pr-4 shrink-0 w-3/5 sm:w-1/3 md:w-1/4 lg:w-1/5">
					<%= render 'workouts/workout', workout: workout %>
				</div>
			<% end %>
		</div>
		<div class="px-4 md:px-0">
			<%= render 'components/if_empty', records: category.workouts, message: "We couldn't find any workouts for this category" %>
		</div>
	</div>
<% end %>

<%= link_to category_path(category), class: 'bg-white aspect-w-2 aspect-h-1 w-full relative leading-none group overflow-hidden block' do %>
	<%= cl_image_tag(category.photo.key, height: 500, width: 1000, crop: :fill, class:'absolute inset-0 transform-gpu scale-100 group-hover:scale-105 transition-transform duration-300 ease-out object-cover') if category.photo.attached? %>
	<div class="p-4 absolute inline-block bottom-0 left-0">
		<h4 class="font-serif capitalize inline-block text-2xl leading-none"><%= simple_format(category.name.gsub(' ','<br/>')) %></h4>
		<p class="opacity-80 text-sm mt-0.5"><%= pluralize(category.workouts.count, 'wrkt') %></p>
	</div>
<% end %>