<% content_for :meta_title, "Sign up" %>

<div class="w-screen h-screen md:flex">
  <%= render 'components/half_page_img', img_path: 'registration_new_1.jpg' %>
  <div class="md:w-1/2 bg-cream p-4 py-10 pb-12 md:p-12 flex flex-col items-start justify-center md:h-full">
    <div class="max-w-sm w-full mx-auto">
      <h1 class="text-4xl md:text-5xl font-serif leading-none mb-8">Sign up</h1>

      <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false } do |f| %>
        <div class="md:grid md:grid-cols-2 md:gap-4">
          <%= f.input :first_name, autocomplete: "given-name" %>
          <%= f.input :last_name, autocomplete: "family-name" %>
        </div>
        <%= f.input :phone, autocomplete: "tel", hint: 'Format with country code like so: +61403978503' %>
        <%= f.input :email, autocomplete: "email" %>
        <%= f.input :password, autocomplete: "new-password" %>
        <%= f.input :terms_of_service, :as => :hidden, :input_html => { :value => true } %>
        <p class="text-sm mt-4"><span class="opacity-50">By selecting 'Agree and signup', I agree to Align Body's</span> <%= link_to 'Terms of Service', terms_path, class: 'underline' %> <span class="opacity-50">and acknowledge the </span><%= link_to 'Privacy Policy', privacy_path, class: 'underline' %></p>
        <%= f.submit "Agree & Signup", class:'bg-black text-white px-6 py-4 text-center cursor-pointer inline-block uppercase w-full flex items-center justify-center font-medium mt-4' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
