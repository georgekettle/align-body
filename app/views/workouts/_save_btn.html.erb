<% btn_klass ||= "" %>
<% icon_klass ||= "" %>
<% show_page ||= false %>

<% if show_page %>
	<%= button_to workout_toggle_save_path(workout), method: :post, form: {id: "workout_#{workout.id}_save_show_page"}, class:"p-2 flex items-center justify-center w-24 bg-black bg-opacity-0 hover:bg-opacity-10 transition-all duration-300 ease-in-out hover:scale-110 active:scale-100 transform scale-100 transition-transform duration-300 #{btn_klass}" do %>
		<% if current_user.workouts.include?(workout) %>
			<%= render 'icons/bookmark', klass: "text-black w-4 h-4 mr-2 #{icon_klass}", fill: true %>
			Saved
		<% else %>
			<%= render 'icons/bookmark', klass: "text-black w-4 h-4 mr-2 #{icon_klass}" %>
			Save
		<% end %>
	<% end %>
<% else %>
	<%= button_to workout_toggle_save_path(workout), method: :post, form: {id: "workout_#{workout.id}_save", class:'h-full w-full'}, class:"bg-white rounded-full p-2 backdrop-blur-lg bg-white/70 flex items-center justify-center w-full h-full hover:scale-105 active:scale-100 transform scale-100 transition-transform duration-300 #{btn_klass}" do %>
		<% if current_user.workouts.include?(workout) %>
			<%= render 'icons/bookmark', klass: "text-black w-full p-0.5 #{icon_klass}", fill: true %>
		<% else %>
			<%= render 'icons/bookmark', klass: "text-black w-full p-0.5 #{icon_klass}" %>
		<% end %>
	<% end %>
<% end %>