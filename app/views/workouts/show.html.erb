<% content_for :meta_title, @workout.name %>

<div class="w-screen md:h-screen md:flex" data-controller="sms-upgrade workout-vimeo" data-workout-vimeo-url-value="<%= @workout.video_url %>" data-sms-upgrade-locked-value="<%= policy(@workout).locked? %>" data-sms-upgrade-url-value="<%= sms_upgrade_url(current_user.id) %>" data-sms-upgrade-upgrade-sms-sent-value="<%= current_user.upgrade_sms_sent %>">
  <div class="fixed top-2 left-4 z-10 <%= 'left-4 top-16 lg:top-16 lg:left-8' unless is_native? %>">
    <div data-native-target="spacerTop"></div>
    <%= render 'components/back/icon_link', klass:"pointer-events-auto #{'bg-white' unless is_native?}" %>
  </div>
  <div data-workout-vimeo-target="cover" class="transition-all duration-500 ease-out md:w-1/2 bg-black bg-opacity-10 h-96 md:max-h-screen md:h-full overflow-hidden relative border-b md:border-b-0 md:border-r border-black">
    <% if @workout.photo.attached? %>
      <%= cl_image_tag @workout.photo.key, class: "object-cover object-center h-full w-full" %>
    <% end %>
  </div>
  <div data-workout-vimeo-target="detail" class="transition-all duration-500 ease-out md:w-1/2 bg-cream md:h-full" style="min-height: calc(100vh / 2)">
    <div class="h-full p-4 md:p-12 flex flex-col items-center justify-center">
      <div class="max-w-md flex flex-col items-center justify-center text-center mx-auto p-4">
        <div class="flex items-center justify-center mb-4">
          <%= render 'workouts/intensity', workout: @workout, include_intensity: true %>
        </div>
        <h1 class="text-4xl tracking-tight font-serif"><%= @workout.name %></h1>
        <p class="text-sm mt-2 opacity-80 mb-6"><%= @workout.mins %> mins Â· with <%= @workout.instructor.name %></p>
        
        <% if policy(@workout).locked? %>
          <div class="bg-black text-white px-6 py-4 text-center cursor-pointer inline-block uppercase w-56 flex items-center justify-center cursor-not-allowed font-medium">
            <%= render 'icons/locked', klass: 'text-white w-4 h-4 mr-4', fill: true %>
            Start workout
          </div>
          <% if is_native? %>
            <p class="text-center text-sm mt-1 text-black opacity-50">This workout is locked for your plan</p>
          <% else %>
            <%= link_to "Upgrade plan to participate", account_path, class: "text-center hover:opacity-80 transition-opacity duration-300 ease-out text-sm mt-1 text-mandarin" %>
          <% end %>
        <% else %>
          <div data-controller="modal" data-modal-background-id-value="vimeo-player">
            <!-- Open modal button -->
            <%= link_to '#', data:{ action:'click->workout-vimeo#play click->modal#open'}, class: "bg-black text-white px-6 py-4 text-center cursor-pointer inline-block uppercase w-56 flex items-center justify-center mb-4 font-medium" do %>
              <%= render 'icons/play_fill', klass: 'text-white w-4 h-4 mr-4' %>
              Start workout
            <% end %>
            <!-- Modal Container -->
            <div data-modal-target="container" data-action="click->modal#closeBackground click->workout-vimeo#pause keyup@window->modal#closeWithKeyboard" class="hidden animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center" style="z-index: 9999;">
              <!-- Modal Inner Container -->
              <div class="max-h-screen w-full max-w-5xl relative">
                <!-- Modal Card -->
                <%= render 'components/modal/container', title: @workout.name do %>
                  <div data-workout-vimeo-target="embed" class="w-full object-contain object-center aspect-h-9 aspect-w-16 bg-mandarin-light relative">
                    <div class="pointer-events-none mix-blend-multiply inset-0 absolute w-full h-full flex items-center justify-center">
                      <%= image_tag 'spinner.gif', class:'h-24' %>
                    </div>
                  </div>
                  <% if current_user.spotify_user  %>
                    <!-- <div class="absolute top-full left-1/2 transform -translate-x-1/2 pt-4"> -->
                    <div class="w-full"></div>
                      <%= render 'components/spotify/player' %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="mt-4">
          <%= render 'workouts/save_btn', workout: @workout, show_page: true %>
        </div>
      </div>
    </div>
  </div>
</div>
