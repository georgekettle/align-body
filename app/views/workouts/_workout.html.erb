<div class="relative">
	<%= link_to workout_path(workout), class: 'aspect-w-1 aspect-h-1 bg-white mb-1 block' do %>
		<% if workout.photo.attached? %>
			<%= cl_image_tag workout.photo.key, height: 500, width: 500, crop: :fill, class:"h-full w-full object-cover object-center" %>
		<% end %>
	<% end %>
	<h3 class="font-medium uppercase text-lg inline"><%= workout.name %></h3>
	<div class="flex items-center">
		<h3 class="opacity-80 text-sm"><%= workout.mins %> mins</h3>
		<% if policy(workout).locked? %>
			<div class="inline-flex items-center justify-center w-5 h-5 ml-2 p-1 bg-forest rounded-full">
				<%= render 'icons/locked', klass:'text-cream w-2.5 h-2.5', fill:true %>
			</div>
		<% end %>
	</div>
	<div class="absolute top-2 right-2 md:top-4 md:right-4 w-8 h-8 md:w-10 md:h-10">
		<% if user_signed_in? %>
			<%= render 'workouts/save_btn', workout: workout %>
		<% end %>
	</div>
</div>